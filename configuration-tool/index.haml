%head
  %link{:href => "style.css", :rel => "stylesheet"}/
  %link{:href => "bootstrap-4.5.2-dist/css/bootstrap.css", :rel => "stylesheet"}/
  %script{:src => "jquery.js"}
  %script{:src => "main.js"}
  %script{:src => "./bootstrap-4.5.2-dist/js/bootstrap.js"}
%body
  .controls
    %label{:for => "columns"} Columns:
    %input#columns{:name => "columns", :type => "text", :value => "4"}/
    %br/
    %br/
    %label{:for => "rows"} Rows:
    %input#rows{:name => "rows", :type => "text", :value => "2"}/
    %br/
    %br/
  .htmlgrid
  / Modal
  #configurebutton.modal.fade{:role => "dialog"}
    .modal-dialog
      .modal-content
        .modal-header
          %h4.modal-title.text-center Edit Button
        .modal-body
          %label{:for => "services"} Service:
          %select#services{:name => "services"}
          %br
          %label{:for => "actions"} Actions:
          %select#actions{:name => "actions"}
        .modal-footer
          %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
